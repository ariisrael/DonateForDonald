<div class="donations-page">
  {{> header}}
  <div class="ui container top-margin-10" style="margin-top:5%">
    <h1>Users</h1>
    {{#if users}}

    <table class="ui unstackable single line table">

      <thead>
        <tr>
          <th>Name</th>
          <th>Picture</th>
          <th>Email</th>
          <th>Payment?</th>
          <th>Social?</th>
          <th>Monthly Limit</th>
          <th>Signup Date</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}

        <tr>
          <td>
            {{#if this.picture}}
            <img src="{{this.picture}}" class="user-picture" style="border-radius: 100%;" height='50' width='50'/>
            {{/if}}
          </td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{#if this.pandaUserId}} true {{else}} false {{/if}}</td>
          <td>{{#if this.social}} true {{else}} false {{/if}}</td>
          <td>{{#if this.monthlyLimit}} {{this.monthlyLimit}} {{else}} 0 {{/if}}</td>
          <td>
            {{this.createdAt}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <p>No Users.</p>
    {{/if}}

  </div>
</div>
