{{> header}}

<div class="ui text container web-form">
<div class="ui divided items">
      {{#each triggers}}

  <div class="item">
    <div class="ui small fluid image charity-image" style="border-radius: 3px">
      <img src="{{this.charityId.image}}">
    </div>

    <div class="content">
      

  <div class=" ui right floated small statistic">
    
    <div class="value">
      <i class="usd green icon"></i> {{this.amount}}    </div>

       <div class="label">
    per tweet
  </div>
  </div>
      <div class="header">{{this.name}} </div>
      <div class="meta">
        
        <span class="stay"> {{this.charityId.name}}</span>
      </div>

      <div class="extra">
                <div style="display: inline-block">

                  <i class="blue twitter icon"></i>
        10 tweets
          </div>
        <div style="display: inline-block">
        <i class="green money icon"></i>
        $121 donated
        </div>

      </div>
          <div class="left floated" style="padding-top: 30px">
         <button class="ui button mini basic icon "><i class="icon write"></i> Edit</button>
                  <button class="ui button mini basic primary icon "><i class="icon share"></i> Share</button>

                  <button class="ui button mini icon basic red"><i class="icon power"></i> Turn Off</button>
 
    </div>
      </div>
     
   
  </div>
  {{/each}}
</div>
</div>
